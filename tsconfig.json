{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./bin",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "test",
        "bin"
    ]
}
